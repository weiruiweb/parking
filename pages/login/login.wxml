<!--User.wxml-->
<view class="user_banner flex">
    <image src="/images/logo.png"></image>
</view>
<view class="flex">
	<view class="w710">
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login1.png"></image></view>
			<view class="input_box"><input placeholder="姓名"></input></view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login2.png"></image></view>
			<view class="input_box"><input placeholder="电话"></input></view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login3.png"></image></view>
			<view class="input_box flex" style="width:40%;">
				<view class="gender flex" data-gender="0" bindtap="gender">
					<image src="{{gender == 0?'/images/select-a.png':'/images/select.png'}}"></image><text class="{{gender == 0?'color':'color6'}}">男</text>
				</view>
				<view class="gender flex" data-gender="1" bindtap="gender">
					<image src="{{gender == 1?'/images/select-a.png':'/images/select.png'}}"></image>
					<text class="{{gender == 1?'color':'color6'}}">女</text>
				</view>
			</view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login4.png"></image></view>
			<view class="input_box"><input placeholder="说明"></input></view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login5.png"></image></view>
			<view class="input_box"><input placeholder="密码"></input></view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1 flex"><image src="/images/login5.png"></image></view>
			<view class="input_box"><input placeholder="确认密码"></input></view>
		</view>
	</view>
</view>

<button class="submit_info">会员注册</button>