<!--User.wxml-->

<view class="flex">
	<view class="w710">
		<view class="input_list1 font28 flex" style="height:120rpx;">
			<view class="input_before1">头像:</view>
			<view class="input_box">
				<view class="user_img">
                  <open-data type="userAvatarUrl"></open-data>
                </view>
			</view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1">姓名:</view>
			<view class="input_box"><input placeholder="请输入您的姓名"></input></view>
		</view>
		<view class="input_list1 font28 flex">
			<view class="input_before1">电话:</view>
			<view class="input_box"><input placeholder="请输入联系电话"></input></view>
		</view>
		<view class="input_list1 font28 flexRowBetween">
			<view class="input_before1">性别:</view>
			<view class="input_box flex" style="width:40%;">
				<view class="gender" data-gender="0" bindtap="gender">
					<image src="{{gender == 0?'/images/select-a.png':'/images/select.png'}}"></image><text class="{{gender == 0?'color':'color6'}}">男</text>
				</view>
				<view class="gender" data-gender="1" bindtap="gender">
					<image src="{{gender == 1?'/images/select-a.png':'/images/select.png'}}"></image>
					<text class="{{gender == 1?'color':'color6'}}">女</text>
				</view>
			</view>
		</view>
	</view>
</view>